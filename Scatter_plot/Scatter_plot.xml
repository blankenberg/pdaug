<tool id="Scatter_plot" name="Scatter plot" version="0.1.0" python_template_version="3.6">
	<description>Analyze peptide descriptor data using scatter plot</description>

    <requirements>
      <requirement type="package" version="3.1.2">matplotlib</requirement>
      <requirement type="package" version="0.25.3">pandas</requirement>
      <requirement type="package" version="0.9.0">seaborn</requirement> 
    </requirements>

    <command detect_errors="exit_code"><![CDATA[

        python '$__tool_directory__/Scatter_plot.py' --InFile '$input1' -F1 '$f1' -F2 '$f2' -F3 '$f3' -Rx '$Rx' -Ry '$Ry' -H '$FigHight' -W '$FigWidth' -L '$Label ' --htmlOutDir '$output2.extra_files_path'  --htmlFname '$output2'              
    ]]></command>

    <inputs>
      <param name="input1" type="data" format="tabular" argument= "--InFile"/>
      <param name="f1" type="text" label="Feature1" help="--Feature1" />
      <param name="f2" type="text" label="Feature2" help="--Feature2" /> 
      <param name="f3" type="text" label="Feature3" help="--Feature3" />
      <param name="Rx" type="integer" value="30" label="RotationX" help="--RotationX" />
      <param name="Ry" type="integer" value="30" label="RotationY" help="--RotationY" />
      <param name="FigHight" type="integer" value="10" label="FigHight" help="--FigHight" />
      <param name="FigWidth" type="integer" value="8"  label="FigWidth" help="--FigWidth" />
      <param name="Label" type="text" label="Label" help="-Label" />

    </inputs>

    <outputs>   
        <data name='output2' format='html' label="report.html" />
    </outputs>
 
    <tests>
        <test>
            <param name="input1" value="test.tsv"/>
            <param name="f1" value="a1"/>
            <param name="f2" value="a2"/>
            <param name="f3" value="a3"/>
            <param name="Rx" value="30"/>
            <param name="Ry" value="30"/>d
            <param name="FigHight" value="10"/>
            <param name="FigWidth" value="8"/>
            <param name="Label" value="test"/>
            <output name="output2" file="report_dir/report.html"/>

        </test>
    </tests>

    <help><![CDATA[
usage: Graph.py [-h] -I IN_FILE [-H FIGHIGHT] [-W FIGWIDTH] [-R ROTATION]
                [--htmlOutDir HTMLOUTDIR] [--htmlFname HTMLFNAME]
                [--Workdirpath WORKDIRPATH]

optional arguments:
  -h, --help            show this help message and exit
  -I IN_FILE, --in_file IN_FILE
                        Path to target tsv file
  -H FIGHIGHT, --FigHight FIGHIGHT
                        Path to target tsv file
  -W FIGWIDTH, --FigWidth FIGWIDTH
                        Path to target tsv file
  -R ROTATION, --Rotation ROTATION
                        Path to target tsv file
  --htmlOutDir HTMLOUTDIR
                        HTML Out Dir
  --htmlFname HTMLFNAME
                        HTML out file
  --Workdirpath WORKDIRPATH
                        Working Directory Path

    ]]></help>
