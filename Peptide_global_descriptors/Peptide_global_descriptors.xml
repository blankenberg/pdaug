<tool id="Peptide_global_descriptors" name="Peptide global descriptors" version="1.1.2">
  <description>Calculates global descriptors of the peptide sequence</description>

  <requirements>
    <requirement type="package" version="0.24.2">pandas</requirement>
    <requirement type="package" version="4.2.1">modlamp</requirement> 
  </requirements>

    <command detect_errors="exit_code"><![CDATA[
        python '$__tool_directory__/Peptide_global_descriptors.py' --InFile '$InFile' --DesType '$GlocalDescriptor' --Amid '$amide' -O '$output1'
    ]]></command>

  <inputs>

    <param name="GlocalDescriptor" type="select" label="GlobalDescriptor"  argument="" help="--DesType" > 
      <option value="Length"> Length </option>
      <option value="Weight"> Weight </option>
      <option value="Charge"> Charge </option>
      <option value="ChargeDensity"> ChargeDensity </option>
      <option value="IsoelectricPoint"> IsoelectricPoint </option>
      <option value="InstabilityIndex"> InstabilityIndex </option>
      <option value="Aromaticity"> Aromaticity </option>
      <option value="AliphaticIndex"> AliphaticIndex </option>
      <option value="BomanIndex"> BomanIndex </option>
      <option value="HydrophobicRatio"> HydrophobicRatio </option>
      <option value="All"> All </option>
    </param> 

    <param name="InFile" type="data" format="fasta" argument= "--InFile"/>
    <param name="ph" type="float" label="ph" value="7.0"  help="--Ph" />
    <param name="amide" type="boolean" label="amide" value="False" help="--Amide" />
  </inputs>


  <outputs>
        <data name='output1' format='tabular' label="out.tsv" />    
  </outputs>
  <tests>
    <test>
      <param name="input" value="1.bed"/>
      <param name="cond" value="c2"/>
      <output name="out_file1" file="gsummary_out1.tabular"/>
    </test>
  </tests>
  <help>

  </help>
</tool>