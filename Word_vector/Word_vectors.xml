<tool id="Word_vectors" name="Word vecto" version="0.1.0" python_template_version="2.7.18">
	<description>plot ngrams</description>
  
    <requirements>
      <requirement type="package" version="3.5">nltk</requirement>
      <requirement type="package" version="1.0.3">pandas</requirement>
      <requirement type="package" version="1.76">biopython</requirement>
      <requirement type="package" version="3.7.1">gensim</requirements>
    </requirements>

    <command detect_errors="exit_code"><![CDATA[

        python2 '$__tool_directory__/word_vectors.py' -I '$input' -M '$mincount' -S '$size' -W '$window' -g '$SG' -O '$output'
             
    ]]></command>

    <inputs>
      <param name="input" type="data" format="fasta" argument= "--Input"/>
      <param name="mincount" type="data" format="fasta" argument= "--min_count"/>
      <param name="size" type="data" format="fasta" argument= "--size"/>
      <param name="window" type="data" format="fasta" argument= "--sg"/>
    </inputs>

    <outputs>   
        <data name='output' format='html' label="report.html" />
    </outputs>
 
    <tests>
        <test>
            <output name="output2" file="report.html"/>
        </test>
    </tests>

