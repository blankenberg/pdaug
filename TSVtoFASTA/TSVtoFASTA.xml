<tool id="TSVtoFASTA" name="TSVtoFASTA" version="1.1.2">
  <description>for any numerical column</description>
  <requirements>
    <requirement type="package" version="0.24.2">pandas</requirement>
    <requirement type="package" version="4.1.2">modlamp</requirement> 
  </requirements>
  <stdio>
    <exit_code range="1" level="fatal" />
  </stdio>
    <command detect_errors="exit_code"><![CDATA[


            python '$__tool_directory__/TSVtoFASTA.py'  -I '$InFile' -M '$Method' 

            #if $Method == 'WithClassLable'
              -P '$OutFile1' -N '$OutFile2' 
            #end if

          #if $Method == 'NoClassLable'
               -O '$OutFile3'
          #end if 

                 
    ]]></command>

  <inputs>
    <param name="InFile" type="data" format="tabular" argument= "--InFile1"/>
    <param name="Method" type="select" label="Method"  argument="" help="--Method" >   
      <option value="WithClassLable"  > WithClassLable </option>
      <option value="NoClassLable" selected="true" > NoClassLable </option>
    </param> 
  </inputs>

  <outputs>
        <data name='OutFile1' format='tabular' label="Positive.fasta" />  
        <data name='OutFile2' format='tabular' label="Negative.fasta" />   
          <filter> $Method == "NoClassLable"</filter>
        <data name='OutFile3' format='tabular' label="Out.tsv" >
          <filter> $Method == "WithClassLable"</filter>
        </data>
  </outputs>
  <tests>
    <test>
      <param name="input" value="1.bed"/>
      <param name="cond" value="c2"/>
      <output name="out_file1" file="gsummary_out1.tabular"/>
    </test>
  </tests>
  <help>

  </help>
</tool>



