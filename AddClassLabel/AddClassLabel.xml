<tool id="AddClassLabel" name="Add Class Label" version="1.1.2">
  <description> Add class label to training data set</description>

  <requirements>
    <requirement type="package" version="2.7.18">python</requirement>
    <requirement type="package" version="0.24.2">pandas</requirement>
  </requirements>


  <stdio>
    <exit_code range="1" level="fatal" />
  </stdio>

    <command detect_errors="exit_code"><![CDATA[
        python '$__tool_directory__/AddClassLabel.py' -I '$input1' -C '$ClassLabel' -O '$OutFile1' -t '$ClassLabelTitle'
    ]]></command>

  <inputs>
    <param name="input1" type="data" label="Input file" format="tabular"  multiple="true" argument= "--InFile"/>
    <param name="ClassLabel" type='text' label="Class Label" value="0" argument="--ClassLabel" />
    <param name="ClassLabelTitle" label="Class Label Title"  type='text' value="Class_label" argument="--ClassLabelTitle" />
  </inputs>

  <outputs>
    <data name='OutFile1' format='tabular' label="Out.tsv" /> 
  </outputs>

  <tests>
    <test>
      <param name="input1" value="new.tsv"/>
      <output name="OutFile1" file="out.tsv"/>
    </test>
  </tests>

  <help>

    usage: AddClassLabel.py [-h] -I INFILE [-C CLASSLABEL] [-t CLASSLABELTITLE]
                        [-O OUTFILE]

optional arguments:
  -h, --help            show this help message and exit
  -I INFILE, --InFile INFILE
                        Input data file
  -C CLASSLABEL, --ClassLabel CLASSLABEL
                        Class Label 0 or 1
  -t CLASSLABELTITLE, --ClassLabelTitle CLASSLABELTITLE
                        Title to use for class label column (Class_label)
  -O OUTFILE, --OutFile OUTFILE
                        Output file name
  </help>
</tool>



