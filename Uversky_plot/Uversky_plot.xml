<tool id="Uversky_plot" name="Uversky plot" version="0.1.0" python_template_version="3.6">
    <description>Uversky plot to analyze ordered and disordered proteins</description>
    
    <requirements>
      <requirement type="package" version="2.7.18">python</requirement>
      <requirement type="package" version="1.4.6">powerlaw</requirement>
      <requirement type="package" version="0.2.4">quantiprot</requirement>
    </requirements>

    <command detect_errors="exit_code"><![CDATA[

        python '$__tool_directory__/Uversky_plot.py'  --Fasta1 '$input1' --Fasta2 '$input2' --htmlOutDir '$output2.extra_files_path'  --htmlFname '$output2' 
             
    ]]></command>

    <inputs>
      <param name="input1" type="data" format="fasta" argument= "--Fasta1" help="--Fasta1"/>
      <param name="input2" type="data" format="fasta" argument="--Fasta2"  help="--Fasta2"/>
    </inputs>

    <outputs>   
        <data name='output2' format='html' label="report.html" />
    </outputs>
 
    <tests>
        <test>
            <param name="input1" value="test1.fasta"/>
            <param name="input2" value="test2.fasta"/>
            <output name="output2" file="report.html"/>
        </test>
    </tests>

    <help><![CDATA[


    ]]></help>
