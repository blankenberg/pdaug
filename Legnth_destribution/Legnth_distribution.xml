<tool id="Peptiide_Legnth_distribution" name="Peptide Legnth distribution" version="0.1.0" python_template_version="3.6">
	<description>Analyze peptides legnth distribution of a dataset</description>

    <requirements>
      <requirement type="package" version="3.2.2">matplotlib</requirement>
      <requirement type="package" version="1.76" >biopython</requirement>                       

    </requirements>

    <command detect_errors="exit_code"><![CDATA[

        python '$__tool_directory__/Legnth_distribution.py' --InFile '$input1'  --htmlOutDir '$output2.extra_files_path'  --htmlFname '$output2'              
    ]]></command>

    <inputs>
      <param name="input1" type="data" format="fasta" argument= "--InFile"/>

    </inputs>

    <outputs>   
        <data name='output2' format='html' label="report.html" />
    </outputs>
 
    <tests>
        <test>
            <param name="input1" value="positive.fasta"/>
            <output name="output2" file="report_dir/report.html"/>
        </test>
    </tests>

