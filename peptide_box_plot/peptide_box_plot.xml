<tool id="peptide_box_plot" name="peptide box plot" version="0.1.0" python_template_version="3.6">
	<description>Plot a boxplot</description>
    <requirements>
      <requirement type="package" version="2.2.3">matplotlib</requirement>
      <requirement type="package" version="0.25.3">pandas</requirement>
      <requirement type="package" version="0.9.0">seaborn</requirement> 

    </requirements>

    <command detect_errors="exit_code"><![CDATA[

        python '$__tool_directory__/peptide_box_plot.py' --InFile '$InFile' --Method '$Method' -Rx '$Rx' -Ry '$Ry' --FigHight '$FigHight' --FigWidth '$FigWidth' --Index '$Index'  --ClassLabel '$ClassLabel' --Features '$Features' --Label '$Label' --htmlOutDir '$output2.extra_files_path'  --htmlFname '$output2'
              
    ]]></command>

    <inputs>
      <param name="InFile" type="data"  label="InFile" argument="--InFile" help="" />
      <param name="Method" type="text"  label="Method" argument="--Method" help="" />
      <param name="Rx" type="integer" value="40" label="RotationX" argument="--RotationX" help="" />
      <param name="Ry" type="integer" value="40" label="RotationY" argument="--RotationY" help="" />
      <param name="FigHight" type="integer" value="10" label="FigHight" argument="--FigHight" help="" />
      <param name="FigWidth" type="integer" value="8" label="FigWidth" argument="--FigWidth" help="" />
      <param name="Index" type="boolean" value="false" label="Index" argument="--Index" help="" />
      <param name="ClassLabel" type="text"  label="ClassLabel" argument="--ClassLabel" help="" />
      <param name="Features" type="text"  label="Features" argument="--Features" help="" />
      <param name="Label" type="text"  label="Label" argument="--Label" help="x label" />
    </inputs>

    <outputs>   
        <data name='output2' format='html' label="report.html" />
    </outputs>
 
    <tests>
        <test>
            <param name="input1" value="test.tsv"/>
            <output name="output2" file="report.html"/>
        </test>
    </tests>

    <help><![CDATA[
usage: Graph.py [-h] -I IN_FILE [-H FIGHIGHT] [-W FIGWIDTH] [-R ROTATION]
                [--htmlOutDir HTMLOUTDIR] [--htmlFname HTMLFNAME]
                [--Workdirpath WORKDIRPATH]

optional arguments:
  -h, --help            show this help message and exit
  -I IN_FILE, --in_file IN_FILE
                        Path to target tsv file
  -H FIGHIGHT, --FigHight FIGHIGHT
                        Path to target tsv file
  -W FIGWIDTH, --FigWidth FIGWIDTH
                        Path to target tsv file
  -R ROTATION, --Rotation ROTATION
                        Path to target tsv file
  --htmlOutDir HTMLOUTDIR
                        HTML Out Dir
  --htmlFname HTMLFNAME
                        HTML out file
  --Workdirpath WORKDIRPATH
                        Working Directory Path

    ]]></help>
