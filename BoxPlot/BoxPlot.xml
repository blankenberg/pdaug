<tool id="BoxPlot" name="BoxPlot" version="0.1.0" python_template_version="3.6">
	<description> BoxPlot for descriptors</description>

    <requirements>
      <requirement type="package" version="2.2.3">matplotlib</requirement>
      <requirement type="package" version="0.25.3">pandas</requirement>
      <requirement type="package" version="0.9.0">seaborn</requirement> 

    </requirements>

    <command detect_errors="exit_code"><![CDATA[

        python '$__tool_directory__/BoxPlot.py' --InFile '$InFile' -Rx '$Rx' -Ry '$Ry' --FigHight '$FigHight' --FigWidth '$FigWidth'  --Features '$Features'  --htmlOutDir '$output2.extra_files_path'  --htmlFname '$output2'
              
    ]]></command>

    <inputs>
      <param name="InFile" type="data"  label="Infile" argument="--InFile" help="Input files with peptide descriptors" />
      <param name="Rx" type="integer" value="40" label="Rotation of X-axis label" argument="--RotationX" help="" />
      <param name="Ry" type="integer" value="40" label="Rotation of Y-axis label" argument="--RotationY" help="" />
      <param name="FigHight" type="integer" value="10" label="Figure Hight" argument="--FigHight" help="" />
      <param name="FigWidth" type="integer" value="8" label="Figure Width" argument="--FigWidth" help="" />
      <param name="Features" type="text"  label="List of features" argument="--Features" help="Ex. feature-1,feature-2,feature-3" />
    </inputs>

    <outputs>   
        <data name='output2' format='html' label="report.html" />
    </outputs>
 
    <tests>
        <test>
            <param name="InFile" value="test.tsv"/>
            <param name="Rx" value="40"/>
            <param name="Ry" value="40"/>
            <param name="FigHight" value="10"/>
            <param name="FigWidth" value="8"/>
            <param name="Features" value="a1,a2,a3"/>
            <output name="output2" file="report_dir/report.html"/>
        </test>
    </tests>

    <help>
      usage: BoxPlot.py [-h] -I INFILE [-Rx ROTATIONX] [-Ry ROTATIONY] [-H FIGHIGHT]
                        [-W FIGWIDTH] -F FEATURES [-O HTMLOUTDIR] [-Hf HTMLFNAME]
                        [-Wp WORKDIRPATH]

      optional arguments:
        -h, --help            show this help message and exit
        -I INFILE, --InFile INFILE
                              Input file
        -Rx ROTATIONX, --RotationX ROTATIONX
                              Roatate xticks
        -Ry ROTATIONY, --RotationY ROTATIONY
                              Roatate yticks
        -H FIGHIGHT, --FigHight FIGHIGHT
                              Figure Hight
        -W FIGWIDTH, --FigWidth FIGWIDTH
                              Figure Width
        -F FEATURES, --Features FEATURES
                              Feature list
        -O HTMLOUTDIR, --htmlOutDir HTMLOUTDIR
                              Path to html dir
        -Hf HTMLFNAME, --htmlFname HTMLFNAME
                              HTML out file
        -Wp WORKDIRPATH, --Workdirpath WORKDIRPATH
                              Path to Working Directory
    </help>
